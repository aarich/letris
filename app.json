{
  "expo": {
    "name": "Letris",
    "slug": "letris",
    "version": "1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "letris",
    "userInterfaceStyle": "automatic",
    "backgroundColor": "#222B45",
    "platforms": ["android", "ios", "web"],
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#222B45"
    },
    "updates": {
      "fallbackToCacheTimeout": 5000,
      "enabled": true
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "buildNumber": "6",
      "supportsTablet": true,
      "bundleIdentifier": "com.mrarich.letris",
      "appStoreUrl": "https://apps.apple.com/app/apple-store/id1612680145?pt=117925864&ct=aj&mt=8",
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "playStoreUrl": "https://play.google.com/store/apps/details?id=rich.alex.letris",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#222B45"
      },
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "QUERY_ALL_PACKAGES"
      ],
      "package": "rich.alex.letris",
      "versionCode": 1
    },
    "plugins": ["sentry-expo"],
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps",
          "config": {
            "organization": "alex-rich",
            "project": "predictions",
            "authToken": "SENTRY_AUTH_TOKEN"
          }
        }
      ]
    }
  }
}
